{
  "compilerOptions": {
   "strict": true,
		"skipLibCheck": true,

		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom", "dom.iterable"],
  },
  "include": ["src/**/*", "index.ts"]
}
